---
import "../styles/global.css";

import AdminSidebar from "../components/AdminSidebar.astro";
import Icons from "../components/Icons.astro"; // Included for completeness, though not directly used in this layout

interface Props {
    title: string;
    description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="mn">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="../img/titem_white.png" type="image/png" />
        {description && <meta name="description" content={description} />}
        <title>{title}</title>
        <style>
            /* Ensure html and body take full height */
            html, body {
                height: 100%;
                margin: 0;
                padding: 0;
            }
            /* Custom scrollbar for better aesthetics in the main content area */
            .main-content-scrollable::-webkit-scrollbar {
                width: 8px;
                height: 8px;
            }
            .main-content-scrollable::-webkit-scrollbar-track {
                background: #f1f1f1;
                border-radius: 10px;
            }
            .main-content-scrollable::-webkit-scrollbar-thumb {
                background: #888;
                border-radius: 10px;
            }
            .main-content-scrollable::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
            /* Hide scrollbar for specific elements if needed, as in your original style */
            .scrollbar-hide::-webkit-scrollbar {
                display: none;
            }
            .scrollbar-hide {
                -ms-overflow-style: none; /* IE and Edge */
                scrollbar-width: none;  /* Firefox */
            }
        </style>
    </head>
    {/* Applied the gradient background to the body tag */}
    <body class="bg-gradient-to-br from-gray-100 via-white to-gray-200 text-gray-700 min-h-screen font-sans antialiased">
        <div class="flex h-screen overflow-hidden"> <!-- Main container now has overflow-hidden -->

            <!-- Admin Sidebar - Fixed on the left, with a specified height -->
            <aside class="w-64 bg-[#003375] text-white flex-shrink-0 shadow-lg relative z-20 h-screen overflow-y-auto">
                <AdminSidebar />
            </aside>

            <!-- Main Content Area - Scrollable -->
            <div class="flex-1 flex flex-col overflow-y-auto main-content-scrollable"> <!-- The main content area is now explicitly scrollable -->

                <!-- Page-specific content will be injected here -->
                <main class="flex-1 bg-gray-50"> <!-- Added padding for better spacing -->
                    <slot />
                </main>
            </div>
        </div>
        <script
            src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
            defer></script>
    </body>
</html>
