<div class="px-[2%] py-3 2xl:px-[5%]">
    <div x-data="{
        mainSlides: [
            '/img/poster2.png',
            '/img/poster1.png',
            'https://cdn.cody.mn/img/324023/2000x0xwebp/banner_09banner.jpg'
        ],
        mainCurrentSlide: 0,
        init() {
            setInterval(() => {
                this.mainCurrentSlide = (this.mainCurrentSlide + 1) % this.mainSlides.length;
            }, 3000);
        }
    }" class="relative w-full overflow-hidden rounded-lg shadow-md lg:h-96 h-auto aspect-[5/1]">
        <template x-for="(slide, index) in mainSlides" :key="index">
            <img
                :src="slide"
                :class="{ 'opacity-100': mainCurrentSlide === index, 'opacity-0': mainCurrentSlide !== index }"
                class="absolute inset-0 w-full h-full object-cover transition-opacity duration-1000 ease-in-out"
            />
        </template>

        <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex space-x-2 z-20">
            <template x-for="(slide, index) in mainSlides" :key="index">
                <button
                    @click="mainCurrentSlide = index"
                    :class="{ 'bg-white': mainCurrentSlide === index, 'bg-gray-400': mainCurrentSlide !== index }"
                    class="w-3 h-3 rounded-full focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-transparent transition-colors duration-300"
                ></button>
            </template>
        </div>

        <button
            @click="mainCurrentSlide = (mainCurrentSlide - 1 + mainSlides.length) % mainSlides.length"
            class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/70 hover:bg-white p-3 rounded-full shadow-lg z-20 transition-all duration-300 hidden md:block"
            aria-label="Previous slide"
        >
            <svg class="w-5 h-5 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
        </button>
        <button
            @click="mainCurrentSlide = (mainCurrentSlide + 1) % mainSlides.length"
            class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/70 hover:bg-white p-3 rounded-full shadow-lg z-20 transition-all duration-300 hidden md:block"
            aria-label="Next slide"
        >
            <svg class="w-5 h-5 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        </button>
    </div>
</div>

